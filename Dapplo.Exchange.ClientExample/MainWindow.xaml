<Window x:Class="Dapplo.Exchange.ClientExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dapplo.Exchange.ClientExample"
        mc:Ignorable="d"
        Title="Email client" SizeToContent="WidthAndHeight">
    <StackPanel Name="Fields" IsEnabled="False">
        <TextBox Name="To" Text="email-address"/>
        <TextBox Name="Subject" Text="Subject"/>
        <TextBox Name="Body" Text="This is the email body"/>
        <Button Content="Send" Click="Button_Click" />
        <Label Name="Upcoming" />
    </StackPanel>
</Window>
