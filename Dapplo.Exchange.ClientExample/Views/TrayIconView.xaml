<ni:TrayIcon x:Class="Dapplo.Exchange.ClientExample.Views.TrayIconView"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:cal="http://www.caliburnproject.org"
			xmlns:ni="clr-namespace:Dapplo.CaliburnMicro.NotifyIconWpf;assembly=Dapplo.CaliburnMicro.NotifyIconWpf"
			IconSource="/Resources/Mail.ico" ToolTipText="Mail notifier">
	<ni:TrayIcon.ContextMenu>
		<ContextMenu>
			<MenuItem Header="{Binding ContextMenuTranslations.Exit}" cal:Message.Attach="Exit" />
		</ContextMenu>
	</ni:TrayIcon.ContextMenu>
</ni:TrayIcon>